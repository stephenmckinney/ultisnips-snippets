# Rails ActionView::Helpers

snippet cf "content_for"
<% content_for :${1:yield_label_in_layout}, "${2:Some text...}" %>
endsnippet

snippet cfb "content_for (block)"
<% content_for :${1:yield_label_in_layout} do %>
	${2}
<% end %>
endsnippet

snippet css "stylesheet_link_tag"
<%= stylesheet_link_tag "${1:stylesheet_filename}" %>
endsnippet

snippet i18 "i18"
I18n.t('${1:type.key}')${2}
endsnippet

snippet it "image_tag"
<%= image_tag "${1:image_path}", :alt => "${2:Alt text}", ${3:other attributes} %>
endsnippet

snippet js "javascript_include_tag"
<%= javascript_include_tag '${1:javascript_filename}' :cache => ${2:true} %>
endsnippet

snippet rf "render (file)"
<%= render '${1:/path/to/views/books/edit}' %>
endsnippet

snippet rp "render (partial)"
<%= render '${1:books/edit}' %>
endsnippet

snippet rpc "render :partial, :collection"
<%= render :partial => '${1:product}', :collection => ${2:@products} %>
endsnippet

snippet rpl "render :partial, :locals"
<%= render :partial => '${1:shared/form}', :locals => { :${2:local_variable} => ${3:@item }$4 } %>
endsnippet

snippet rps "render :partial, :status"
<%= render :partial => '${1:file}', :status => ${2:500} %>
endsnippet

snippet lt "link_to"
<%= link_to '${1:link text...}', ${2:action}_${3:model}_path %>
endsnippet

snippet ltm "link_to (model)"
<%= link_to '${1:link text...}', ${2:action}_${3:model}_path(${4:@$3}) %>
endsnippet

snippet ltc "link_to (child model)"
<%= link_to '${1:link text...}', ${2:parent}_${3:child}_path(${4:@$2}, ${5:@$3}) %>
endsnippet

snippet ltr "link_to_remote"
<%= link_to_remote "${1:name}", ${2:options} %>
endsnippet

# Forms

snippet cs "collection_select"
<%= collection_select ${1:object}, ${2:method}, ${3:collection}, ${4:value_method}, ${5:text_method}${6:, options, html_options} %>${7}
endsnippet

snippet ff "form_for"
<%= form_for @${1:model} do |f| %>
  <%= f.error_messages %>
  ${2}
<% end %>
endsnippet

snippet fcb "f.check_box"
<%= ${1:f}.check_box :${2:attribute} %>
endsnippet

snippet fcs "f.collection_select"
<%= f.collection_select ${2:object-method}, ${3:collection}, ${4:collection-value_method}, ${5:collection-text_method}${6:, options, html_options} %>${7}
endsnippet

snippet fff "f.file_field"
<%= ${1:f}.file_field :${2:attribute} %>
endsnippet

snippet fhf "f.hidden_field"
<%= ${1:f}.hidden_field :${2:attribute} %>
endsnippet

snippet fl "f.label"
<%= ${1:f}.label :${2:attribute}, '${3:$2}' %>
endsnippet

snippet fpf "f.password_field"
<%= ${1:f}.password_field :${2:attribute} %>
endsnippet

snippet frb "f.radio_button"
<%= ${1:f}.radio_button :${2:attribute}, :${3:tag_value} %>
endsnippet

snippet fs "f.submit"
<%= ${1:f}.submit "${2:button name}" %>
endsnippet

snippet fta "f.text_area"
<%= ${1:f}.text_area :${2:attribute} %>
endsnippet

snippet fff "f.fields_for"
<%= f.fields_for :${1:association} do |${2:ff}| %>
  ${3}
<% end %>
endsnippet

snippet ftf "f.text_field"
<%= ${1:f}.text_field :${2:attribute} %>
endsnippet

snippet ft "form_tag"
<%= form_tag(${1:'url'}) do %>
  ${2}
<% end %>
endsnippet

snippet ftff "fields_for"
<%= fields_for :${1:model}, @$1 do |${2:f}| %>
  ${3}
<% end %>
endsnippet

snippet fto "options_from_collection_for_select"
<%= options_from_collection_for_select ${1:collection}, ${2:value_method}, ${3:text_method}, ${4:selected_value} %>
endsnippet

snippet ftst "submit_tag"
<%= submit_tag "${1:Save changes}" %>
endsnippet

snippet ftstr "submit_to_remote"
<%= submit_to_remote ${1:name}, ${2:value} %>
endsnippet

# vim:ft=snippets:
